{
    "version": 1,
    "formatters": {
        "detailed": {
            "format": "%(asctime)s - %(levelname)s - [%(name)s] - %(message)s",
            "datefmt": "%Y-%m-%d %H:%M:%S"
        }

    },
    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "formatter": "detailed"
        },
        "file": {
            "class": "logging.FileHandler",
            "filename": "${LOG_PATH}",
            "formatter": "detailed",
            "mode": "a"
        }
    },
    "loggers": {
        "sprouts_tool.utils": {
            "level": "DEBUG",
            "handlers": ["file"]
        },
        "sprouts_tool.parser": {
            "level": "DEBUG",
            "handlers": ["file"]
        }
    },
    "root": {
        "level": "WARNING",
        "handlers": ["console"]
    }
}